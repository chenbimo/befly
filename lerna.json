{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "packages": ["packages/*"],
    "npmClient": "bun",
    "command": {
        "publish": {
            "ignoreScripts": false,
            "yes": true,
            "registry": "https://registry.npmjs.org",
            "verifyAccess": true,
            "ignoreChanges": ["**/*.md", "**/*.test.ts", "**/tests/**", "**/docs/**", "**/temp/**", "**/__tests__/**"]
        },
        "version": {
            "changelog": false,
            "createRelease": "none",
            "push": false
        }
    }
}
