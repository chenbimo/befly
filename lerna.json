{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "npmClient": "npm",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "registry": "https://registry.npmjs.org",
            "ignoreChanges": ["**/*.md", "**/*.test.ts", "**/tests/**", "**/docs/**", "**/notes/**", "**/__tests__/**"]
        },
        "version": {
            "createRelease": "none",
            "push": false,
            "gitTagVersion": false,
            "conventionalCommits": false,
            "exact": true
        }
    },
    "packages": ["packages/*"]
}
