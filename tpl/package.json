{
    "name": "befly-template",
    "version": "3.0.0",
    "main": "main.ts",
    "types": "main.ts",
    "description": "Befly 3.0 TypeScript Template",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "dev": "bun run main.ts",
