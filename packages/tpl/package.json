{
    "name": "befly-template",
    "version": "3.0.0",
    "main": "main.ts",
    "types": "main.ts",
    "description": "Befly 3.0 TypeScript Template",
    "private": true,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "dev": "bun run main.ts",
        "serve": "bunx --bun pm2 start pm2.config.cjs -a",
        "test": "bun test",
        "test:api": "bun run test-api-runner.ts",
        "syncDb": "befly syncDb",
        "syncDev": " befly syncDev"
    },
    "type": "module",
    "dependencies": {
        "befly": "workspace:*",
        "befly-cli": "workspace:*"
    },
    "engines": {
        "bun": ">=1.3.0"
    }
}
