{
    "name": "befly",
    "version": "3.0.0",
    "description": "Befly - 为 Bun 专属打造的 TypeScript API 接口框架核心引擎",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "main": "main.ts",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "default": "./main.ts"
        },
        "./types": {
            "types": "./types/index.d.ts",
            "default": "./types/index.d.ts"
        }
    },
    "bin": {
        "befly": "./bin/befly.ts"
    },
    "scripts": {
        "bundler": "bun build ./main.ts --outfile ./main.single.ts --minify --target bun"
    },
    "keywords": [
        "bun",
        "api",
        "framework",
        "core",
        "typescript",
        "javascript",
        "backend",
        "rest",
        "http",
        "type-safe"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "bin/",
        "apis/",
        "checks/",
        "config/",
        "plugins/",
        "scripts/",
        "tables/",
        "types/",
        "utils/",
        ".gitignore",
        ".npmignore",
        ".bunignore",
        ".editorconfig",
        ".npmrc",
        ".prettierignore",
        ".prettierrc",
        "bunfig.toml",
        "tsconfig.json",
        "LICENSE",
        "main.ts",
        "main.js",
        "system.ts",
        "system.js",
        "package.json",
        "README.md"
    ],
    "engines": {
        "bun": ">=1.3.0"
    },
    "devDependencies": {
        "@types/bun": "latest"
    }
}
