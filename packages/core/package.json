{
    "name": "befly",
    "version": "3.8.29",
    "description": "Befly - 为 Bun 专属打造的 TypeScript API 接口框架核心引擎",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "main": "main.ts",
    "types": "main.ts",
    "exports": {
        ".": {
            "types": "./main.ts",
            "default": "./main.ts"
        },
        "./*": "./*"
    },
    "scripts": {
        "bundler": "bun build ./main.ts --outfile ./main.single.ts --minify --target bun"
    },
    "keywords": [
        "bun",
        "api",
        "framework",
        "core",
        "typescript",
        "javascript",
        "backend",
        "rest",
        "http",
        "type-safe"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "checks",
        "dist",
        "hooks",
        "lib",
        "loader",
        "plugins",
        "router",
        "sync",
        "tests",
        "types",
        ".npmrc",
        ".prettierignore",
        ".prettierrc",
        "bunfig.toml",
        "config.ts",
        "LICENSE",
        "main.ts",
        "paths.ts",
        "package.json",
        "README.md",
        "tsconfig.json",
        "LICENSE"
    ],
    "engines": {
        "bun": ">=1.3.0"
    },
    "dependencies": {
        "befly-shared": "^1.0.7",
        "chalk": "^5.6.2",
        "es-toolkit": "^1.42.0",
        "fast-jwt": "^6.0.2",
        "fast-xml-parser": "^5.3.2",
        "pathe": "^2.0.3",
        "pino": "^10.1.0",
        "pino-roll": "^4.0.0"
    },
    "gitHead": "495f5661f3fad19c1d2d6d27926c10fec926fee4",
    "devDependencies": {
        "typescript": "^5.9.3"
    }
}
