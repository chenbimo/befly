{
    "name": "befly",
    "version": "3.10.19",
    "gitHead": "79270d11fb0ff1a5dafada0d12812f4335ef9f45",
    "private": false,
    "description": "Befly - 为 Bun 专属打造的 TypeScript API 接口框架核心引擎",
    "keywords": [
        "api",
        "backend",
        "bun",
        "core",
        "framework",
        "http",
        "javascript",
        "rest",
        "type-safe",
        "typescript"
    ],
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "author": "chensuiyi <bimostyle@qq.com>",
    "files": [
        "LICENSE",
        "README.md",
        "dist/"
    ],
    "type": "module",
    "main": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": {
            "types": "./dist/main.d.ts",
            "default": "./dist/main.js"
        },
        "./types/*": {
            "types": "./dist/types/*.d.ts"
        }
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "clean": "rimraf dist",
        "test": "bun test",
        "build": "bunx tsgo -p tsconfig.build.json",
        "prepack": "bun run build && bun run ./scripts/ensureDist.ts",
        "typecheck": "bunx tsgo -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "befly-shared": "^1.3.11",
        "chalk": "^5.6.2",
        "es-toolkit": "^1.43.0",
        "fast-jwt": "^6.1.0",
        "fast-xml-parser": "^5.3.3",
        "merge-anything": "^6.0.6",
        "pathe": "^2.0.3",
        "pino": "^10.1.0",
        "pino-roll": "^4.0.0"
    },
    "engines": {
        "bun": ">=1.3.0"
    }
}
