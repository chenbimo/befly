{
    "name": "befly",
    "version": "3.8.20",
    "description": "Befly - 为 Bun 专属打造的 TypeScript API 接口框架核心引擎",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "main": "main.ts",
    "types": "main.ts",
    "exports": {
        ".": {
            "types": "./main.ts",
            "default": "./main.ts"
        },
        "./types": {
            "types": "./types/index.ts",
            "default": "./types/index.ts"
        }
    },
    "scripts": {
        "bundler": "bun build ./main.ts --outfile ./main.single.ts --minify --target bun"
    },
    "keywords": [
        "bun",
        "api",
        "framework",
        "core",
        "typescript",
        "javascript",
        "backend",
        "rest",
        "http",
        "type-safe"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "sync/",
        "config/",
        "lib/",
        "loader/",
        "plugins/",
        "router/",
        "types/",
        ".npmrc",
        ".prettierignore",
        ".prettierrc",
        "bunfig.toml",
        "tsconfig.json",
        "LICENSE",
        "main.ts",
        "check.ts",
        "paths.ts",
        "response.ts",
        "dist/",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "bun": ">=1.3.0"
    },
    "dependencies": {
        "befly-util": "workspace:*",
        "chalk": "^5.6.2",
        "es-toolkit": "^1.41.0",
        "pathe": "^2.0.3"
    },
    "gitHead": "96136321570fd1abf859e691d6ccbc69d7696c4b",
    "devDependencies": {
        "typescript": "^5.9.3"
    }
}
