{
    "nickname": {
        "name": "昵称",
        "type": "string",
        "min": 1,
        "max": 50
    },
    "username": {
        "name": "用户名",
        "type": "string",
        "min": 2,
        "max": 30,
        "regexp": "@alphanumeric_"
    },
    "password": {
        "name": "密码",
        "type": "string",
        "min": 6,
        "max": 500
    },
    "email": {
        "name": "邮箱",
        "type": "string",
        "max": 100,
        "regexp": "@email"
    },
    "phone": {
        "name": "手机号",
        "type": "string",
        "max": 20,
        "regexp": "@phone"
    },
    "avatar": {
        "name": "头像",
        "type": "string",
        "max": 500
    },
    "roleCode": {
        "name": "角色编码",
        "type": "string",
        "min": 2,
        "max": 50,
        "regexp": "@alphanumeric_"
    },
    "roleType": {
        "name": "角色类型",
        "type": "string",
        "min": 4,
        "max": 5,
        "default": "user",
        "index": true,
        "regexp": "^(admin|user)$"
    },
    "lastLoginTime": {
        "name": "最后登录时间",
        "type": "number",
        "default": 0
    },
    "lastLoginIp": {
        "name": "最后登录IP",
        "type": "string",
        "max": 50
    }
}
