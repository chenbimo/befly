{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "bundler",
        "types": ["bun-types"],
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["bin/**/*", "commands/**/*"],
    "exclude": ["node_modules"]
}
