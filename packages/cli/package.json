{
    "name": "befly-cli",
    "version": "3.0.0",
    "description": "Befly CLI - 为 Befly 框架提供命令行工具",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "bin": {
        "befly": "./bin/index.ts"
    },
    "scripts": {
        "dev": "bun run bin/index.ts",
        "build": "bun build ./bin/index.ts --outfile ./dist/index.js --minify --target bun",
        "test": "bun test"
    },
    "keywords": [
        "befly",
        "cli",
        "command-line",
        "tool",
        "framework",
        "typescript",
        "bun"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "bin/",
        "commands/",
        "utils/",
        "templates/",
        "dist/",
        "LICENSE",
        "README.md",
        "package.json"
    ],
    "engines": {
        "bun": ">=1.3.0"
    },
    "dependencies": {
        "commander": "^14.0.2",
        "chalk": "^5.6.2",
        "ora": "^9.0.0",
        "inquirer": "^12.10.0",
        "degit": "^2.8.4"
    },
    "devDependencies": {
        "@types/bun": "^1.3.1",
        "@types/inquirer": "^9.0.9"
    }
}
