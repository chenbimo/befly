{
    "env": {
        "es2022": true,
        "node": true,
        "browser": true
    },
    "ignorePatterns": ["**/node_modules/**", "**/dist/**", "**/logs/**", "temp/**", "**/*.d.ts"],
    "rules": {
        "no-console": "error",
        "no-debugger": "error"
    },
    "overrides": [
        {
            "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.test.js", "**/*.test.jsx", "**/tests/**"],
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": ["packages/core/lib/logger.ts"],
            "rules": {
                "no-console": "off"
            }
        }
    ]
}
