{
    "env": {
        "es2022": true,
        "node": true,
        "browser": true
    },
    "ignorePatterns": ["**/node_modules/**", "**/dist/**", "**/logs/**", "temp/**", "**/*.d.ts"],
    "rules": {
        "no-console": "error",
        "no-debugger": "error",

        "eqeqeq": "error",
        "no-var": "error",
        "no-eval": "error",
        "no-throw-literal": "error",
        "radix": "error",
        "no-implicit-coercion": "error",
        "prefer-object-has-own": "error"
    },
    "overrides": [
        {
            "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.test.js", "**/*.test.jsx", "**/tests/**"],
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": ["packages/core/lib/logger.ts"],
            "rules": {
                "no-console": "off"
            }
        }
    ]
}
