{
    "name": "befly-monorepo",
    "version": "3.0.0",
    "private": true,
    "description": "Befly Framework - Monorepo with Core and Template",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "version": "lerna version --no-push --no-git-tag-version",
        "publish": "lerna publish from-package --no-git-tag-version --yes",
        "format": "prettier --write \"**/*.{js,ts,jsx,tsx,vue,json,md,yaml,yml,css,scss,less,html}\"",
        "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,vue,json,md,yaml,yml,css,scss,less,html}\""
    },
    "devDependencies": {
        "@lerna-lite/cli": "4.9.1",
        "@lerna-lite/publish": "4.9.1",
        "@lerna-lite/version": "4.9.1",
        "@types/bun": "1.3.1",
        "prettier": "3.6.2",
        "lint-staged": "16.2.6",
        "simple-git-hooks": "2.13.1"
    },
    "simple-git-hooks": {
        "pre-commit": "bunx --bun lint-staged"
    },
    "lint-staged": {
        "*.{js,css,scss,less,ts,jsx,vue,html,json,md,yaml}": "bunx --bun prettier --write --cache --ignore-unknown"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "author": "chenbimo",
    "license": "Apache-2.0"
}
