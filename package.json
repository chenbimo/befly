{
    "name": "befly-monorepo",
    "version": "3.0.0",
    "private": true,
    "description": "Befly Framework - Monorepo with Core and Template",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev:tpl": "bun --cwd packages/tpl run dev",
        "dev:admin": "bun --cwd packages/admin run dev",
        "dev:docs": "bun --cwd packages/docs run dev",
        "test": "bun --cwd packages/tpl test",
        "test:core": "bun --cwd packages/core test",
        "syncDb": "bun --cwd packages/tpl run syncDb",
        "initMenu": "bun --cwd packages/tpl run addons/admin/scripts/initMenu.ts",
        "initDev": "bun --cwd packages/tpl run addons/admin/scripts/initDev.ts",
        "serve": "bun --cwd packages/tpl run serve",
        "build:docs": "bun --cwd packages/docs run build",
        "build:admin": "bun --cwd packages/admin run build",
        "version": "lerna version --no-push --no-git-tag-version",
        "publish": "lerna publish from-package --no-git-tag-version --yes"
    },
    "devDependencies": {
        "@lerna-lite/cli": "4.9.0",
        "@lerna-lite/publish": "4.9.0",
        "@lerna-lite/version": "4.9.0",
        "@types/bun": "1.3.0"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "author": "chenbimo",
    "license": "Apache-2.0"
}
