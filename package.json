{
    "name": "befly-monorepo",
    "version": "3.0.0",
    "private": true,
    "description": "Befly Framework - Monorepo with Core and Template",
    "license": "Apache-2.0",
    "author": "chenbimo",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "bun --filter '*' test",
        "test:core": "bun --filter 'befly' test",
        "test:bail": "bun --filter '*' test --bail",
        "test:coverage": "bun --filter '*' test --coverage",
        "format:oxfmt": "oxfmt -c ./.oxfmtrc.jsonc .",
        "format": "bun run format:oxfmt",
        "lint": "oxlint .",
        "typecheck:core": "bun run --cwd packages/core typecheck",
        "typecheck": "bun run typecheck:core",
        "typecheck:all": "lerna run typecheck --stream",
        "gate:typecheck:all": "bun run typecheck:all",
        "gate:format": "bun run format:oxfmt",
        "gate:lint": "bun run lint",
        "gate:typecheck": "bun run typecheck",
        "gate:test": "bun test",
        "gate:test:bail": "bun test --bail",
        "gate:smoke": "bun test packages/core/tests/smoke-sql.test.ts",
        "gate": "bun run gate:format && bun run gate:lint && bun run gate:typecheck && bun run gate:test",
        "r": "lerna publish"
    },
    "devDependencies": {
        "@types/bun": "^1.3.5",
        "@typescript/native-preview": "7.0.0-dev.20260103.1",
        "lefthook": "^2.0.13",
        "lerna": "^9.0.3"
    },
    "engines": {
        "bun": ">=1.3.0"
    }
}
