{
    "name": "befly-monorepo",
    "version": "3.0.0",
    "private": true,
    "description": "Befly Framework - Monorepo with Core and Template",
    "engines": {
        "bun": ">=1.3.0"
    },
    "author": "chenbimo",
    "license": "Apache-2.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "bun --filter '*' test",
        "test:core": "bun --filter 'befly' test",
        "test:shared": "bun --filter 'befly-shared' test",
        "test:bail": "bun --filter '*' test --bail",
        "test:coverage": "bun --filter '*' test --coverage",
        "r": "lerna publish"
    },
    "devDependencies": {
        "@prettier/plugin-oxc": "^0.1.3",
        "@types/bun": "^1.3.4",
        "@typescript/native-preview": "^7.0.0-dev.20251211.1",
        "lefthook": "^2.0.9",
        "lerna": "^9.0.3",
        "prettier": "^3.7.4"
    }
}
