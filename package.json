{
  "name": "befly-monorepo",
  "version": "3.0.0",
  "private": true,
  "description": "Befly Framework - Monorepo with Core and Template",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "version": "lerna version --no-push --no-git-tag-version",
    "publish": "lerna publish from-package --no-git-tag-version --yes",
    "prepare": "husky"
  },
  "devDependencies": {
    "@j178/prek": "0.2.8",
    "@lerna-lite/cli": "4.9.0",
    "@lerna-lite/publish": "4.9.0",
    "@lerna-lite/version": "4.9.0",
    "@types/bun": "1.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,css,scss,less,ts,jsx,tsx,vue,html,json,md,yaml,yml}": "prettier --write"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "chenbimo",
  "license": "Apache-2.0"
}
