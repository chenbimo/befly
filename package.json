{
    "name": "befly-monorepo",
    "version": "3.0.0",
    "private": true,
    "description": "Befly Framework - Monorepo with Core and Template",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "version": "lerna version --no-push --no-git-tag-version",
        "publish": "lerna publish from-package --no-git-tag-version --yes",
        "format": "prettier --write \"**/*.{js,ts,jsx,tsx,vue,json,md,yaml,yml,css,scss,less,html}\"",
        "format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,vue,json,md,yaml,yml,css,scss,less,html}\""
    },
    "devDependencies": {
        "@lerna-lite/cli": "4.9.0",
        "@lerna-lite/publish": "4.9.0",
        "@lerna-lite/version": "4.9.0",
        "@types/bun": "1.3.0",
        "lint-staged": "16.2.4",
        "prettier": "^3.3.3"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,vue,json,md,yaml,yml,css,scss,less,html}": "prettier --write"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "author": "chenbimo",
    "license": "Apache-2.0"
}
