{
    "name": "befly",
    "version": "2.3.0",
    "description": "Buma - 为 Bun 专属打造的 API 接口框架核心引擎",
    "type": "module",
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "main": "main.js",
    "exports": {
        ".": "./main.js"
    },
    "scripts": {
        "ra": "bun run ../release.js --major",
        "rb": "bun run ../release.js --minor",
        "rc": "bun run ../release.js --patch"
    },
    "keywords": [
        "bun",
        "api",
        "framework",
        "core",
        "javascript",
        "backend",
        "rest",
        "http"
    ],
    "author": "chensuiyi <bimostyle@qq.com>",
    "homepage": "https://chensuiyi.me",
    "license": "Apache-2.0",
    "files": [
        "apis/",
        "checks/",
        "config/",
        "plugins/",
        "scripts/",
        "tables/",
        "utils/",
        ".gitignore",
        ".npmignore",
        ".bunignore",
        ".editorconfig",
        ".npmrc",
        ".prettierignore",
        ".prettierrc",
        "bunfig.toml",
        "LICENSE",
        "main.js",
        "system.js",
        "package.json",
        "README.md"
    ],
    "simple-git-hooks": {
        "pre-commit": "bunx --bun lint-staged"
    },
    "lint-staged": {
        "*.{js,css,scss,less,ts,jsx,vue,html,json,md,yaml}": "bunx --bun prettier --write --cache --ignore-unknown"
    },
    "gitHead": "1dc5f118a723969456559e758e2ba889f4601224"
}
